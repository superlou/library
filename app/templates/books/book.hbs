<div class='row'>
    <div class='col-md-12'>
        <h1>{{full_title}}</h1>
        <h2>{{subtitle}}</h2>
        <p>By {{author}}</p>
    </div>
</div>

<div class='row'>
    <div class='col-md-12 toolbar'>
        {{#link-to 'books.edit' model class='action'}}Edit{{/link-to}}

        <span class='dropdown'>
            <a data-toggle='dropdown' class='action'>Tools</a>
            <ul class='dropdown-menu' role='menu'>
                <li>{{#link-to 'books.clone_volume' model}}
                    <span class='glyphicon glyphicon-share-alt'></span> Clone Volume
                {{/link-to}}</li>
                <li><a {{action 'delete'}}><span class='glyphicon glyphicon-remove'></span> Delete</button></a></li>
            </ul>
        </span>

        {{!-- {{#link-to 'checkout' bookCode=code class='action'}}Checkout{{/link-to}} --}}
        <a href='#' {{action checkout model}} class='action'>Checkout</a>

        <span class='slugs'>
            <span class='slug'>{{codeSlug code}}</span>
            <span class='slug' {{bind-attr class='noStock:alert'}} {{bind-attr class='notAvailable:warning'}}>{{stockSlug available stock}}</span>
            <span class='slug'>{{adultSlug adult}}</span>
        </span>
    </div>
</div>

<div class='row'>
    <div class='col-md-12'>
        <h2>Notes</h2>
        <p>{{valueOrDefault notes '(no notes entered)'}}</p>
    </div>
</div>