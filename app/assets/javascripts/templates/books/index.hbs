<div class='row'>
    <div class='col-md-6'>
        <h1>Filter Books</h1>
    </div>
    <div class='col-md-6'>
        {{#linkTo 'books.new' class='btn btn-default pull-right'}}New Book{{/linkTo}}
    </div>
</div>

<form class='form-horizontal' role='form'>
    <div class='form-group'>
        <label for="filterName" class="col-md-2 control-label">Title</label>
        <div class='col-md-10'>
            {{view Ember.TextField valueBinding='filterName' placeholder='book title'
              class='form-control'}}
        </div>
    </div>
    <div class='form-group'>
        <label for="filterVolume" class="col-md-2 control-label">Volume</label>
        <div class='col-md-10'>
            {{view Ember.TextField valueBinding='filterVolume' placeholder='book volume'
            class='form-control'}}
        </div>
    </div>
</form>