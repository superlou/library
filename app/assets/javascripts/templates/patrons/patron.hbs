<div class='row'>
    <div class='col-md-8'>
        <h1>{{name}}</h1>
    </div>
    <div class='col-md-4'>
        {{#linkTo 'patrons.edit' this class='btn btn-default'}}Edit{{/linkTo}}
        <button class='btn btn-default' {{action 'delete'}}>Delete</button>
    </div>
</div>

<ul class='slug-line'>
    {{codeSlug code}}
    {{emailSlug email}}
    {{identitySlug gender adult}}
    {{keepCheckoutHistorySlug keepCheckoutHistory}}
</ul>

{{#if notes}}
    <h2>Notes</h2>
    <p>{{notes}}</p>
{{/if}}