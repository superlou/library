{{#if isEditing}}
    <h1>Edit {{name}}</h1>
    {{partial 'patrons/edit'}}
    <button {{action 'saveEdit'}}>Save</button>
    <button {{action 'cancelEdit'}}>Cancel</button>
{{else}}
    <div class='row'>
        <div class='small-8 columns'>
            <h1>{{name}}</h1>
        </div>
        <div class='small-4 columns'>
            <button {{action 'edit'}}>Edit</button>
            <button {{action 'delete'}}>Delete</button>
        </div>
    </div>

    <ul class='slug-line'>
        {{codeSlug code}}
        {{emailSlug email}}
        {{identitySlug gender adult}}
    </ul>

    {{#if notes}}
        <h2>Notes</h2>
        <p>{{notes}}</p>
    {{/if}}
{{/if}}