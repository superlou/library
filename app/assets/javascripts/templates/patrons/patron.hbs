<div class='row'>
    <div class='col-md-12'>
        <h1>{{name}}</h1>
    </div>
</div>

<div>
    <div class='col-md-12 toolbar'>
        {{#linkTo 'patrons.edit' this class='action'}}Edit{{/linkTo}}

        <span class='dropdown'>
            <a data-toggle='dropdown' class='action'>Tools</a>
            <ul class='dropdown-menu' role='menu'>
                <li><a {{action 'delete'}}><span class='glyphicon glyphicon-remove'></span> Delete</button></a></li>
            </ul>
        </span>

        <span class='slugs'>
            <span class='slug'>{{codeSlug code}}</span>
            <span class='slug'>{{identitySlug gender adult}}</span>
            <span class='sllug'>{{keepCheckoutHistorySlug keepCheckoutHistory}}</span>
        </span>
    </div>
</div>

<div class='row'>
    <div class='col-md-3'>
        <h2>Email</h2>
        <p>{{valueOrDefault email '(no email entered)'}}</p>
    </div>
</div>

<div class='row'>
    <div class='col-md-12'>
        <h2>Notes</h2>
        <p>{{valueOrDefault notes '(no notes entered)'}}</p>
    </div>
</div>