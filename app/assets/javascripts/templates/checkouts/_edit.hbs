<fieldset>
    <legend>Edit Checkout</legend>

    <div class='row'>
        {{errors.responseText}}
    </div>

    <div class='row'>
        <div class='small-6 columns'>
            <label>Book Code</label>
            {{view Ember.TextField valueBinding='book_code'}}
            {{model.book.full_title}}
            {{#if model.book.adult}}
                <p><span class='alert label'>
                    For adults only
                </span></p>
            {{/if}}
        </div>

        <div class='small-6 columns'>
            <label>Patron Code</label>
            {{view Ember.TextField valueBinding='patron_code'}}
            {{model.patron.name}}
        </div>
    </div>
</fieldset>